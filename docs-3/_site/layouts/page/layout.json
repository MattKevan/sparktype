{
  "name": "Standard Page",
  "version": "1.0.0",
  "description": "A clean, single-column layout for standard pages like 'About Us'.",
  "layoutType": "page",
  "files": [
    { "path": "layout.json", "type": "manifest" },
    { "path": "index.hbs", "type": "template" }
  ],
  "schema": {
    "title": "Page Options",
    "type": "object",
    "properties": {
      "show_updated_date": {
        "type": "boolean",
        "title": "Show Last Updated Date",
        "default": false
      }
    }
  },
  "image_presets": {
    "banner": {
      "source": "banner_image",
      "width": 900,
      "crop": "scale"
    },
    "featured": {
      "source": "featured_image",
      "width": 600,
      "crop": "scale"
    }
  }
}