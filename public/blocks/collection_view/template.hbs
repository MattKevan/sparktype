{{!-- Collection View Block Template --}}
<div class="collection-view-block mb-6 {{#if this.config.layout}}layout-{{this.config.layout}}{{/if}}">
  {{#if this.content.title}}
    <h2 class="collection-title text-2xl font-bold mb-4">{{this.content.title}}</h2>
  {{/if}}
  
  <div class="collection-items grid gap-4 {{#if this.config.layout}}{{#eq this.config.layout 'grid'}}grid-cols-1 md:grid-cols-2 lg:grid-cols-3{{/eq}}{{/if}}">
    {{#each (collectionView this.config @root.siteData)}}
      <article class="collection-item border rounded-lg p-4 hover:shadow-md transition-shadow">
        {{#if this.frontmatter.featured_image}}
          <div class="item-image mb-3">
            {{{image src=this.frontmatter.featured_image alt=this.frontmatter.title class="w-full h-48 object-cover rounded"}}}
          </div>
        {{/if}}
        
        <div class="item-content">
          <h3 class="item-title text-lg font-semibold mb-2">
            <a href="{{this.url}}" class="text-blue-600 hover:text-blue-800 no-underline">{{this.frontmatter.title}}</a>
          </h3>
          
          {{#if this.frontmatter.date}}
            <time class="item-date text-sm text-gray-500 block mb-2" datetime="{{this.frontmatter.date}}">
              {{formatDate this.frontmatter.date}}
            </time>
          {{/if}}
          
          {{#if this.frontmatter.description}}
            <p class="item-description text-gray-700 text-sm">{{this.frontmatter.description}}</p>
          {{/if}}
        </div>
      </article>
    {{/each}}
  </div>
</div>