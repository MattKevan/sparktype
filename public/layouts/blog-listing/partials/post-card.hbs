{{!
  Partial for a single blog post card.
  'this' refers to one item from the `collectionItems` array.
}}
<article class="post-card flex flex-column br2 ba b--black-10">
    {{#if this.frontmatter.featured_image}}
        <a href="{{getCollectionItemUrl this}}" class="db aspect-ratio aspect-ratio--16x9">
            {{{image src=this.frontmatter.featured_image alt=this.frontmatter.title class="aspect-ratio--object"}}}
        </a>
    {{/if}}

    <div class="pa3 flex-auto flex flex-column">
        <h3 class="f4 lh-title mv0">
            <a href="{{getCollectionItemUrl this}}" class="link black hover-blue">{{this.frontmatter.title}}</a>
        </h3>
        <p class="f6 mid-gray mv2">
            {{formatDate this.frontmatter.date}}
        </p>
        {{#if this.frontmatter.excerpt}}
            <p class="f6 lh-copy mt2 mb3 flex-auto">
                {{this.frontmatter.excerpt}}
            </p>
        {{/if}}
        <a href="{{getCollectionItemUrl this}}" class="link blue f6 fw6 mt-auto">Read More â†’</a>
    </div>
</article>