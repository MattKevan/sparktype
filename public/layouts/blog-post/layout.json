{
  "name": "Blog Post",
  "version": "1.0.0",
  "description": "The standard layout for an individual blog post article.",
  "layoutType": "single",
  "files": [
    { "path": "layout.json", "type": "manifest" },
    { "path": "index.hbs", "type": "template" }
  ],
  "schema": {
    "title": "Blog Post Fields",
    "type": "object",
    "properties": {
       "show_updated_date": {
        "type": "boolean",
        "title": "Show Last Updated Date",
        "default": false
      },
      "date_published": {
        "type": "string",
        "title": "Date Published",
        "format": "date",
        "description": "The original publication date of this blog post"
      },
      "author": {
        "type": "string",
        "title": "Author Name"
      },
      "excerpt": {
        "type": "string",
        "title": "Excerpt",
        "description": "A short summary of the post, used in listings and social media previews."
      },
      "tags": {
        "type": "array",
        "title": "Tags",
        "items": {
          "type": "string"
        }
      }
    }
  },
  "image_presets": {
    "banner": {
      "source": "banner_image",
      "width": 900,
      "crop": "scale"
    },
    "featured": {
      "source": "featured_image",
      "width": 600,
      "crop": "scale"
    }
  },
  "uiSchema": {
    "date_published": {
      "ui:widget": "date"
    },
    "excerpt": {
      "ui:widget": "textarea",
      "ui:options": {
        "rows": 4
      }
    }
  }
}