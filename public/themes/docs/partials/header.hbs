{{!-- Header bar with optional content --}}
<header class="header bb b--black-10 pa3 bg-white fixed w-100 z-2">
  <div class="flex items-center justify-between">
    {{!-- Mobile sidebar toggle --}}
    <button 
      class="db dn-l pa2 bn bg-transparent pointer"
      @click="sidebarOpen = !sidebarOpen"
      aria-label="Toggle navigation"
    >
      <svg class="w1 h1" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
      </svg>
    </button>

    {{!-- Header content --}}
    {{#if (themeData 'header_content')}}
    <div class="flex-auto ph3">
      {{{themeData 'header_content'}}}
    </div>
    {{/if}}
  </div>
</header>